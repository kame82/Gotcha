<section>
  <div>
    <h2 class="text-4xl md:text-5xl text-center"><%= "#{@birthM}月#{@birthD}日のBirth Dayポケモンは…" %></h2>
  </div>
  <div class="text-3xl mx-auto max-w-xl mt-10">
    <div>
      <div>ID: <%= @data["id"] %></div>
      <div>Name: <%=  @jpdata["names"][0]["name"] %></div> <!--[0]は日本語名が含まれるハッシュの番号-->
      <%# <div>Type:<%= @data["types"][0]["type"]["name"]</div> %>
      <div><%= image_tag @data["sprites"]["front_default"], class: "mx-auto w-[220px] md:w-[300px]" %></div>
    </div>
    <div class="text-center sm:flex justify-center gap-1">
      <%= link_to "https://twitter.com/intent/tweet?url=https://pokebirth.onrender.com&text=私の誕生日（#{@birthM}月#{@birthD}日）ポケモンは、「#{@jpdata["names"][0]["name"]}」でした！%0a&hashtags=誕生日ポケモン", target: '_blank', class: "max-w[220px] w-max" do %>
      <div class="text-gray-800 text-2xl btn btn-accent w-max max-w-[220px] btnHover"> Twitter(X)で共有</div>
      <% end %>
      <%= link_to "Homeに戻る" ,root_path ,class: "text-gray-800 text-2xl btn btn-primary w-[220px] mt-2 sm:mt-0 btnHover" %>
    </div>
  </div>
</section>
